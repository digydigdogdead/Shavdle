@rendermode InteractiveServer

<div class="answer-grid">
    <p class="inputLetter">@FirstChar</p>
    <p class="inputLetter">@SecondChar</p>
    <p class="inputLetter">@ThirdChar</p>
    <p class="inputLetter">@FourthChar</p>
    <button class="submitButton" disabled="@(!FullWord)" @onclick="SubmitGuess">↵</button>
</div>

@code {
    bool FullWord = false;

    [Parameter]
    public EventCallback<string[]> SubmitGuessCallBack { get; set; }
    [Parameter]
    public string FirstChar
    { 
        get { return field; } 
        set 
        {
            field = value;
            StateHasChanged(); 
        } 
    } = "";
    [Parameter]
    public string SecondChar 
    { 
        get { return field; } 
        set 
        {
            field = value;
            StateHasChanged(); 
        } 
    } = "";
    [Parameter]
    public string ThirdChar 
    { 
        get { return field; } 
        set 
        {
            field = value;
            StateHasChanged(); 
        } 
    } = "";
    [Parameter]
    public string FourthChar 
    {
        get { return field; } 
        set 
        {
            field = value;
            if (value != "" && FirstChar != "" && SecondChar != "" && ThirdChar != "")
            {
                FullWord = true;
            }
            else
            {
                FullWord = false;
            }
            StateHasChanged(); 
        } 
    } = "";

    void SubmitGuess()
    {
        var guess = new string[] { FirstChar, SecondChar, ThirdChar, FourthChar };

        //actual
        FirstChar = "";
        SecondChar = "";
        ThirdChar = "";
        FourthChar = "";
        StateHasChanged();
        SubmitGuessCallBack.InvokeAsync(guess);
    }
}
